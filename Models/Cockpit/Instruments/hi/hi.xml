<?xml version="1.0"?>

<PropertyList>

<path>hi.ac</path>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
    <object-name>shadow</object-name>
	</effect>

  <animation>
      <type>material</type>
      <object-name>Compass.Ball</object-name>
      <object-name>Compass.Index</object-name>
      <object-name>Bezel</object-name>
      <object-name>Hdg.Knob</object-name>
      <object-name>hdg01</object-name>
      <object-name>hdg02</object-name>
      <object-name>hdg03</object-name>  
      <condition>
        <and>
          <not>
            <property>/controls/electric/master-switch</property>
          </not>
          <greater-than>
            <property>sim/multiplay/generic/float[11]</property>
            <value>0</value>
          </greater-than>
        </and>
      </condition>
      <emission>
        <red>0.32</red>
        <green>0.15</green>
        <blue>0.075</blue>
        <factor-prop>sim/multiplay/generic/float[11]</factor-prop>
      </emission>
  </animation>

  <animation>
      <type>material</type>
      <object-name>Compass.Ball</object-name>
      <object-name>Compass.Index</object-name>
      <object-name>Bezel</object-name>
      <object-name>Hdg.Knob</object-name>
      <object-name>hdg01</object-name>
      <object-name>hdg02</object-name>
      <object-name>hdg03</object-name>  
      <condition>
        <less-than>
          <property>sim/multiplay/generic/float[11]</property>
          <value>1.01</value>
        </less-than>
      </condition>
      <emission>
	      <red>0.028</red>
	      <green>0.014</green>
	      <blue>0.007</blue>
        <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      </emission>
  </animation>

<animation>
  <type>rotate</type>
  <object-name>Compass.Ball</object-name>
  <property>/orientation/heading-deg</property>
  <axis>
    <x>0</x>
    <y>0</y>
    <z>-1</z>
  </axis>
  <center>
    <x-m>-0.03314</x-m>
    <y-m>0</y-m>
    <z-m>0</z-m>
  </center>
</animation>

    <animation>
        <type>textranslate</type>
        <object-name>hdg01</object-name>
        <property>/autopilot/settings/heading-bug-deg</property>
        <factor>0.001</factor>
        <step>100</step>
		<bias>0.005</bias>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>hdg02</object-name>
        <property>/autopilot/settings/heading-bug-deg</property>
        <factor>0.01</factor>
        <step>10</step>
		<bias>0.005</bias>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>hdg03</object-name>
        <property>/autopilot/settings/heading-bug-deg</property>
        <factor>0.1</factor>
        <step>1</step>
		<bias>0.005</bias>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
      <type>rotate</type>
      <object-name>Hdg.Knob</object-name>
      <property>/autopilot/settings/heading-bug-deg</property>
      <center>
        <x-m>0</x-m>
        <y-m>0</y-m>
        <z-m>-0.0522</z-m>
      </center>
      <axis>
        <x>-1</x>
        <y>0</y>
        <z>0</z>
      </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>Hdg.Knob.plane</object-name>
        <visible>false</visible>
        <action>
            <button>0</button>
            <binding>
                <condition>
                    <not>
                        <property>devices/status/keyboard/shift</property>
                    </not>
                </condition>
                <command>property-adjust</command>
                <property>/autopilot/settings/heading-bug-deg</property>
                <step>10</step>
                <min>0</min>
                <max>360</max>
                <wrap>1</wrap>
            </binding>
            <binding>
                <condition>
                    <property>devices/status/keyboard/shift</property>
                </condition>
                <command>property-adjust</command>
                <property>/autopilot/settings/heading-bug-deg</property>
                <step>100</step>
                <min>0</min>
                <max>360</max>
                <wrap>1</wrap>
            </binding>
        </action>
        <action>
            <button>1</button>
            <binding>
                <condition>
                    <not>
                        <property>devices/status/keyboard/shift</property>
                    </not>
                </condition>
                <command>property-adjust</command>
                <property>/autopilot/settings/heading-bug-deg</property>
                <step>-10</step>
                <min>0</min>
                <max>360</max>
                <wrap>1</wrap>
            </binding>
            <binding>
                <condition>
                    <property>devices/status/keyboard/shift</property>
                </condition>
                <command>property-adjust</command>
                <property>/autopilot/settings/heading-bug-deg</property>
                <step>-100</step>
                <min>0</min>
                <max>360</max>
                <wrap>1</wrap>
            </binding>
        </action>
        <action>
            <button>3</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>            
            <binding>
                <condition>
                    <not>
                        <property>devices/status/keyboard/shift</property>
                    </not>
                </condition>
                <command>property-adjust</command>
                <property>/autopilot/settings/heading-bug-deg</property>
                <step>1</step>
                <min>0</min>
                <max>360</max>
                <wrap>1</wrap>
            </binding>
            <binding>
                <condition>
                    <property>devices/status/keyboard/shift</property>
                </condition>
                <command>property-adjust</command>
                <property>/autopilot/settings/heading-bug-deg</property>
                <step>10</step>
                <min>0</min>
                <max>360</max>
                <wrap>1</wrap>
            </binding>
        </action>
        <action>
            <button>4</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <condition>
                    <not>
                        <property>devices/status/keyboard/shift</property>
                    </not>
                </condition>
                <command>property-adjust</command>
                <property>/autopilot/settings/heading-bug-deg</property>
                <step>-1</step>
                <min>0</min>
                <max>360</max>
                <wrap>1</wrap>
            </binding>
            <binding>
                <condition>
                    <property>devices/status/keyboard/shift</property>
                </condition>
                <command>property-adjust</command>
                <property>/autopilot/settings/heading-bug-deg</property>
                <step>-10</step>
                <min>0</min>
                <max>360</max>
                <wrap>1</wrap>
            </binding>
        </action>
    </animation>

</PropertyList>
