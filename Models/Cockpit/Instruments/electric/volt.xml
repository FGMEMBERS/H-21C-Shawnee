<?xml version="1.0"?>

<PropertyList>

 <path>volt.ac</path>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
    <object-name>shadow</object-name>
	</effect>

  <animation>
      <type>material</type>
      <object-name>face</object-name>
      <object-name>needle</object-name>
      <condition>
        <and>
          <not>
            <property>/controls/electric/master-switch</property>
          </not>
          <greater-than>
            <property>sim/multiplay/generic/float[11]</property>
            <value>0</value>
          </greater-than>
        </and>
      </condition>
      <emission>
        <red>0.32</red>
        <green>0.15</green>
        <blue>0.075</blue>
        <factor-prop>sim/multiplay/generic/float[11]</factor-prop>
      </emission>
  </animation>

  <animation>
      <type>material</type>
      <object-name>face</object-name>
      <object-name>needle</object-name>
      <condition>
        <less-than>
          <property>sim/multiplay/generic/float[11]</property>
          <value>1.01</value>
        </less-than>
      </condition>
      <emission>
	      <red>0.028</red>
	      <green>0.014</green>
	      <blue>0.007</blue>
        <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      </emission>
  </animation>

 <animation>
  <type>rotate</type>
  <object-name>needle</object-name>
	<object-name>needle.001</object-name>
  <property>/systems/electrical/volts</property>
  <interpolation>
   <entry><ind>-100</ind><dep> 0</dep></entry>
   <entry><ind>  0</ind><dep>  0</dep></entry>
   <entry><ind> 24</ind><dep> 71</dep></entry>
   <entry><ind> 28</ind><dep> 87</dep></entry>
   <entry><ind> 31</ind><dep>105</dep></entry>
  </interpolation>
  <center>
    <x-m>0</x-m>
    <y-m>0.0077</y-m>
    <z-m>0</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

</PropertyList>


