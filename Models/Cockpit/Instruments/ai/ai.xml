<?xml version="1.0"?>

<PropertyList>

<path>ai.ac</path>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
    <object-name>shadow</object-name>
	</effect>

  <animation>
      <type>material</type>
      <object-name>AI.Ball</object-name>
      <object-name>AI.BankIndex</object-name>
      <object-name>AI.BezelMask</object-name>
      <object-name>AI.Bar.Aircraft</object-name>
      <object-name>AI.Bar.Horizon</object-name>
      <object-name>AI.Knob</object-name>
      <condition>
        <and>
          <not>
            <property>/controls/electric/master-switch</property>
          </not>
          <greater-than>
            <property>sim/multiplay/generic/float[11]</property>
            <value>0</value>
          </greater-than>
        </and>
      </condition>
      <emission>
        <red>0.32</red>
        <green>0.15</green>
        <blue>0.075</blue>
        <factor-prop>sim/multiplay/generic/float[11]</factor-prop>
      </emission>
  </animation>

  <animation>
      <type>material</type>
      <object-name>AI.Ball</object-name>
      <object-name>AI.BankIndex</object-name>
      <object-name>AI.BezelMask</object-name>
      <object-name>AI.Bar.Aircraft</object-name>
      <object-name>AI.Bar.Horizon</object-name>
      <object-name>AI.Knob</object-name>
      <condition>
        <less-than>
          <property>sim/multiplay/generic/float[11]</property>
          <value>1.01</value>
        </less-than>
      </condition>
      <emission>
	      <red>0.028</red>
	      <green>0.014</green>
	      <blue>0.007</blue>
        <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      </emission>
  </animation>

<animation>
  <type>rotate</type>
  <object-name>AI.BankIndex</object-name>
  <object-name>AI.Bar.Horizon</object-name>
  <property>/orientation/roll-deg</property>
  <interpolation>
    <entry><ind>-90.0</ind><dep>-90.0</dep></entry>
    <entry><ind> 90.0</ind><dep> 90.0</dep></entry>
  </interpolation>
  <axis>
    <x>1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>AI.Ball</object-name>
  <property>/orientation/roll-deg</property>
  <interpolation>
    <entry><ind>-90.0</ind><dep>-90.0</dep></entry>
    <entry><ind> 90.0</ind><dep> 90.0</dep></entry>
  </interpolation>
  <axis>
    <x>1</x>
    <y>0</y>
    <z>0</z>
  </axis>
  <center>
    <x-m>-0.036</x-m>
    <y-m>0</y-m>
    <z-m>0</z-m>
  </center>
</animation>

<animation>
  <type>rotate</type>
  <object-name>AI.Ball</object-name>
  <object-name>AI.Bar.Horizon</object-name>
  <property>/orientation/pitch-deg</property>
  <interpolation>
    <entry><ind>-90.0</ind><dep>-90.0</dep></entry>
    <entry><ind> 90.0</ind><dep> 90.0</dep></entry>
  </interpolation>
  <axis>
    <x>0</x>
    <y>1</y>
    <z>0</z>
  </axis>
  <center>
    <x-m>-0.036</x-m>
    <y-m>0</y-m>
    <z-m>0</z-m>
  </center>
</animation>

<animation>
  <type>translate</type>
  <object-name>AI.Bar.Aircraft</object-name>
  <property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
  <factor>0.001</factor>
  <axis>
    <x>0</x>
    <y>0</y>
    <z>1</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>AI.Knob</object-name>
  <property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
  <factor>25</factor>
  <center>
    <x-m>0</x-m>
    <y-m>0</y-m>
    <z-m>-0.0522</z-m>
  </center>
  <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>


<animation>
    <type>pick</type>
    <object-name>AI.Knob.plane</object-name>
    <visible>false</visible>
    <action>
        <button>0</button>
        <repeatable>true</repeatable>
        <interval-sec>0.2</interval-sec>
        <binding>
        <command>property-adjust</command>
        <property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
          <step>1</step>
          <min>-5</min>
          <max>5</max>
          <wrap>false</wrap>
        </binding>
    </action>
    <action>
        <button>1</button>
        <repeatable>true</repeatable>
        <interval-sec>0.2</interval-sec>
        <binding>
        <command>property-adjust</command>
        <property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
          <step>-1</step>
          <min>-5</min>
          <max>5</max>
          <wrap>false</wrap>
        </binding>
    </action>
    <action>
        <button>3</button>
        <binding>
        <command>property-adjust</command>
        <property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
          <step>1</step>
          <min>-5</min>
          <max>5</max>
          <wrap>false</wrap>
        </binding>
    </action>
    <action>
        <button>4</button>
        <binding>
        <command>property-adjust</command>
        <property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
          <step>-1</step>
          <min>-5</min>
          <max>5</max>
          <wrap>false</wrap>
        </binding>
    </action>
</animation>

</PropertyList>
